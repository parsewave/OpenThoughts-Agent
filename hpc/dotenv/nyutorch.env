export ALLOW_EXTRA_ARGS=True
export DC_AGENT_SECRET_ENV=~/secrets.env
export DCFT=/scratch/$USER/dcagent_scratch
export DCFT_PRIVATE=/scratch/$USER/OpenThoughts-Agent
export DCFT_GROUP=pr_40_tandon_advanced
export RUN_SINGULARITY=$DCFT_PRIVATE/hpc/scripts/run-singularity-torch.bash
export SINGULARITY_OVERLAY=/scratch/$USER/dcft_singularity/dc_agents.ext3
export SINGULARITY_IMAGE=/scratch/$USER/conda_envs/cuda12.8.1-cudnn9.8.0-ubuntu24.04.2.sif
export HF_HUB_CACHE=/scratch/$USER/.cache/huggingface
export CHECKPOINTS_DIR=/scratch/$USER/dcagent_scratch/checkpoints
export LOGS_DIR=/scratch/$USER/dcagent_scratch/logs
export MODELS_DIR=$HF_HUB_CACHE
export DATASETS_DIR=$HF_HUB_CACHE
export TOKENIZED_DATASETS_DIR=/scratch/$USER/dcagent_scratch/tokenized_datasets
export WANDB_PROJECT=OpenThoughts-Agent
export WANDB_ENTITY=dogml
export VLLM_CACHE_ROOT=/scratch/$USER/dcagent_scratch/vllm
export HF_HOME=$HF_HUB_CACHE
export DCFT_PRIVATE_ACTIVATE_ENV="echo 'NYU Torch uses Singularity; activate environments inside the container'"
export APPTAINER_BINDPATH=/scratch,/state/partition1,/mnt,/share/apps
# SkyRL home directory (clone from https://github.com/penfever/SkyRL.git)
export SKYRL_HOME=/scratch/$USER/SkyRL
# Keep the repo importable even if Python strips the working directory from sys.path.
# Include SKYRL_HOME/skyrl-train for examples/terminal_bench entrypoints
export PYTHONPATH="${SKYRL_HOME}/skyrl-train:${DCFT_PRIVATE:-$DCFT}${PYTHONPATH:+:$PYTHONPATH}"
