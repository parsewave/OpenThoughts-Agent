export DCFT=$WORK/DCFT_shared
export DCFT_GROUP=interactive
export DCFT_CONDA=$DCFT/mamba
export DCFT_PRIVATE=$DCFT/OpenThoughts-Agent
export DCFT_PRIVATE_ENV=$DCFT_PRIVATE/env/dcft-private
export EVALCHEMY=$DCFT/evalchemy
export EVALCHEMY_GPU_ENV=$EVALCHEMY/env/cu121-evalchemy
export EVALCHEMY_CPU_ENV=$EVALCHEMY/env/cpu-evalchemy
export HF_HUB_CACHE=$DCFT/hub
export DCFT_PRIVATE_ACTIVATE_ENV="source $DCFT_CONDA/bin/activate $DCFT_PRIVATE_ENV"
export EVALCHEMY_ACTIVATE_ENV="source $DCFT_CONDA/bin/activate $EVALCHEMY_CPU_ENV"
export WANDB_PROJECT=dcft
export VLLM_CACHE_ROOT=$DCFT/vllm
export MODELS_DIR=$HF_HUB_CACHE
export DATASETS_DIR=$HF_HUB_CACHE
export TOKENIZED_DATASETS_DIR=$DCFT/tokenized_datasets
export NUM_NODES_DEFAULT=1
export NUM_NODES_SLOW=1
export NUM_GPUS_PER_NODE=4
export DISABLE_VERSION_CHECK=1
export DEFAULT_TIME_LIMIT=24:00:00
export CHECKPOINTS_DIR=$DCFT/checkpoints
export DCFT_WANDB_DIR=$DCFT/wandb
# Keep the repo importable even if Python strips the working directory from sys.path.
export PYTHONPATH="${DCFT_PRIVATE:-$DCFT}${PYTHONPATH:+:$PYTHONPATH}"
