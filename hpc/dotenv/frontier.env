# Primary project checkout and scratch locations
export SCRATCH=/lustre/orion/lrn081/scratch/penfever
export DCFT=$SCRATCH/OpenThoughts-Agent

# Local NVMe (burst-buffer) mount reserved per job
export NVME_DIR=/mnt/bb/penfever

# Cache directories â€“ NVMe paths are only used inside batch jobs
export FRONTIER_NVME_HF_HOME=$NVME_DIR/hf_home
export FRONTIER_NVME_HF_HUB_CACHE=$NVME_DIR/hf_cache
export TORCH_HOME=$NVME_DIR/torch

# Default login-node caches fall back to SCRATCH so they remain writable
export HF_HOME=$SCRATCH/.cache/huggingface
export HF_HUB_CACHE=$HF_HOME/hub

# Conda activation (otagent env lives under home)
export DCFT_ACTIVATE_ENV='source /ccs/home/penfever/miniconda3/etc/profile.d/conda.sh && conda activate otagent'

# Secrets (Supabase / HF tokens, etc.)
export DC_AGENT_SECRET_ENV=$HOME/secrets.env
# SkyRL home directory (clone from https://github.com/penfever/SkyRL.git)
export SKYRL_HOME=$SCRATCH/SkyRL
# Keep the repo importable even if Python strips the working directory from sys.path.
# Include SKYRL_HOME/skyrl-train for examples/terminal_bench entrypoints
export PYTHONPATH="${SKYRL_HOME}/skyrl-train:${DCFT_PRIVATE:-$DCFT}${PYTHONPATH:+:$PYTHONPATH}"
